### vip-common.conf
#
# UCARP common configuation file
#
# Managed: Puppet <%= puppetversion %>
#

# Common VIP settings which can be overridden in individual vip-<nnnn>.conf
PASSWORD="<%= scope.lookupvar('ucarp::vPw') %>"
BIND_INTERFACE="<%= scope.lookupvar('ucarp::vIf') %>"
SOURCE_ADDRESS="<%= scope.lookupvar('::ipaddress') %>"

# If you have extra options to add, see "ucarp --help" output
OPTIONS="--shutdown --preempt"
